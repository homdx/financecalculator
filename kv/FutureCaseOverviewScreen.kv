<FutureCaseOverviewScreen>:
    # on_pre_enter: root.set_user_information()
    # welcome_label: welcome_label
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        orientation: 'horizontal'
        Label:
            id: welcome_label
            text: ''
            font_size: self.height * 0.5
            font_name: default_font
            size_hint: (1, .1)
            halign: 'center'
            pos_hint: {'x':0, 'y': 0.85}
        BoxLayout:
            size_hint: (.4, .25)
            pos_hint: {'x': 0.3, 'y': 0.5}
            orientation: 'vertical'
            spacing: 10


            Button:
                text: 'Future Case OVERVIEW SCREEN!!'
                color: .25, .25, .25, 1
                background_color: (0, 0, 0, 0)
                on_release: app.load_overview()
                canvas.before:
                    Color:
                        rgba: .75, .75, .75, 1
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
                    
            Button:
                text: 'Present Case'
                color: .25, .25, .25, 1
                background_color: (0, 0, 0, 0)
                on_release: app.load_overview()
                canvas.before:
                    Color:
                        rgba: .75, .75, .75, 1
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
            Button:
                text: 'Compare Future + Present Cases'
                color: .25, .25, .25, 1
                background_color: (0, 0, 0, 0)
                on_release: app.load_overview()
                canvas.before:
                    Color:
                        rgba: .75, .75, .75, 1
                    Line:
                        width: 1
