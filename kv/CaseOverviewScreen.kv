<CaseOverviewScreen>:
    # on_pre_enter: root.set_user_information()
    # welcome_label: welcome_label
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    AnchorLayout:
        anchor_y:'top'

        Label:
            # pos_hint: {"x": .2, 'y':0.5}
            id: case_label
            size_hint_y: None
            text_size: self.width, None
            valign: 'center'
            halign: 'center'
            height: self.texture_size[1] * 2.5
            text: 'Future Case Menu'
            bcolor: .25, .25, .25, 1
            canvas.before:
                Color:
                    rgba: self.bcolor
                Rectangle:
                    pos: self.pos
                    size: self.size

    FloatLayout:
        orientation: 'horizontal'
        Label:
            id: welcome_label
            text: ''
            font_size: self.height * 0.5
            font_name: default_font
            size_hint: (1, .1)
            halign: 'center'
            pos_hint: {'x':0, 'y': 0.85}
        BoxLayout:
            size_hint: (.4, .25)
            pos_hint: {'x': 0.3, 'y': 0.5}
            orientation: 'vertical'
            spacing: 10


            Button:
                text: 'Income'
                color: .25, .25, .25, 1
                background_color: (0, 0, 0, 0)
                on_release: app.load_overview()
                canvas.before:
                    Color:
                        rgba: .75, .75, .75, 1
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
                    
            Button:
                text: 'Expenses'
                color: .25, .25, .25, 1
                background_color: (0, 0, 0, 0)
                on_release: app.load_overview()
                canvas.before:
                    Color:
                        rgba: .75, .75, .75, 1
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
            Button:
                text: 'Investments'
                color: .25, .25, .25, 1
                background_color: (0, 0, 0, 0)
                on_release: app.load_overview()
                canvas.before:
                    Color:
                        rgba: .75, .75, .75, 1
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height            # Button:

            Button:
                text: 'Debts'
                color: .25, .25, .25, 1
                background_color: (0, 0, 0, 0)
                on_release: app.load_overview()
                canvas.before:
                    Color:
                        rgba: .75, .75, .75, 1
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height            # Button:

        
