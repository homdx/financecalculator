<MutableLabelTextInput@MutableTextInput>:
    Label:
        id: w_label
        pos: root.pos
        text: root.text

    TextInput:
        id: w_textinput
        pos: root.pos
        text: root.text
        multiline: root.multiline
        on_focus: root.check_focus_and_view(self)

<IncomeListItem>:
    on_note_content: app.set_overview_content(self.note_index, self.note_content,self.note_type)
    on_note_title: app.set_overview_title(self.note_index, self.note_title,self.note_type)


    height: '48sp'
    size_hint_y: None

    canvas.before:
        Color:
            rgb: .3, .31, .3
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'

            padding: '5dp'
            spacing: 20

            Button:
                text: 'X'
                size_hint_x: None
                width: self.height
                on_release: app.del_OverviewListItem(root.note_index,root.note_type)

            MutableLabelTextInput:
            	canvas.before:
    		        Color:
    		            rgb: .4, .2, .3
    		        Rectangle:
    		            pos: self.pos
    		            size: self.width, 3
                text: root.note_title
                font_size: '16sp'
                multiline: False
                on_text: root.note_title = self.text

            Label:
                text: 'Gross:'

            MutableLabelTextInput:
            	canvas.before:
    		        Color:
    		            rgb: .4, .2, .3
    		        Rectangle:
    		            pos: self.pos
    		            size: self.width, 3
                text: root.note_content
                font_size: '16sp'
                multiline: False
                on_text: root.note_content = self.text

            Label:
                text: 'Net:'
                # text_size: self.size
                halign: 'left'

            CheckBox:
                # group: 'check'
                id : chkGross
                on_active: app.checkGross()

