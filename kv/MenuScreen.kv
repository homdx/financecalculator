                        rgba: .75, .75, .75, 1
                    Line:
                        id:line_border
                        width: 2
                        rectangle: self.x, (self.y - 2), self.width, (self.height)

                Label:
                    # pos_hint: {"x": .2, 'y':0.5}
                    id: present_case_label
                    text: 'Present Case'
                    size_hint_y: None
                    text_size: self.width, None
                    valign: 'middle'
                    halign: 'center'
                    height: self.texture_size[1] * 2.5
                    bcolor: .25, .25, .25, 1
                    canvas.before:
                        Color:
                            rgba: self.bcolor
