                    color: .25, .25, .25, 1
                    background_color: (0, 0, 0, 0)
                    on_release: root.load_present_case()
                    canvas.before:
                        Color:
                            rgba: .75, .75, .75, 1
                        Line:
                            rectangle: self.x + self.width/4, self.y, self.width/2, 1
                    # canvas.before:
                    #     Line:
                    #         rectangle: self.x + self.width, self.y, self.width, 1

