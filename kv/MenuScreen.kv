#:include kv/GUIManager.kv
<MenuScreen>:

    # welcome_label: welcome_label
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    AnchorLayout:
        anchor_y:'top'

        Label:
            # pos_hint: {"x": .2, 'y':0.5}
            id: future_case_label
            size_hint_y: None
            text_size: self.width, None
            valign: 'center'
            halign: 'center'
            height: self.texture_size[1] * 2.5
            text: 'Main Menu'
            bcolor: .25, .25, .25, 1
            canvas.before:
                Color:
                    rgba: self.bcolor
                Rectangle:
                    pos: self.pos
                    size: self.size

    BoxLayout:
        spacing: 1
        orientation: 'horizontal'

        AnchorLayout:
            anchor_y:'center'

            BoxLayout:
                orientation: 'vertical'
                size_hint: None, None
                size: self.parent.width/1.2,self.parent.height/3
                pos: self.parent.width/2 -self.width/2, self.parent.height/2 -self.height/2
                spacing:2

                canvas.before:
                    Color:
                        rgba: .75, .75, .75, 1
                    Line:
                        id:line_border
                        width: 2
                        rectangle: self.x, (self.y - 2), self.width, (self.height)

                Label:
                    # pos_hint: {"x": .2, 'y':0.5}
                    id: future_case_label
                    size_hint_y: None
                    text_size: self.width, None
                    valign: 'middle'
                    halign: 'center'
                    height: self.texture_size[1] * 2.5
                    text: 'Future Case'
                    bcolor: .25, .25, .25, 1
                    canvas.before:
                        Color:
                            rgba: self.bcolor
                        Rectangle:
                            pos: self.pos
                            size: self.size

                Button:
                    text: 'New Case'
                    # size_hint: (None, None)
                    color: .25, .25, .25, 1
                    background_color: (0, 0, 0, 0)
                    on_release: root.create_future_case()
                    canvas.before:
                        Color:
                            rgba: .75, .75, .75, 1
                        Line:
                            rectangle: self.x + self.width/4, self.y, self.width/2, 1
                Button:
                    text: 'Load Case'
                    # size_hint: (None, None)
                    color: .25, .25, .25, 1
                    background_color: (0, 0, 0, 0)
                    on_release: root.load_future_case()
                    canvas.before:
                        Color:
                            rgba: .75, .75, .75, 1
                        Line:
                            rectangle: self.x + self.width/4, self.y, self.width/2, 1
                    # canvas.before:
                    #     Line:
                    #         rectangle: self.x + self.width, self.y, self.width, 1

                Button:
                    text: 'Compare Cases'
                    # size_hint: (None, None)
                    color: .25, .25, .25, 1
                    background_color: (0, 0, 0, 0)
                    on_release: root.compare_future_cases()
                    canvas.before:
                        Line:
                            rectangle: self.x + self.width/4, self.y, self.width/2, 1


        AnchorLayout:
            anchor_y:'center'

            BoxLayout:
                orientation: 'vertical'
                size_hint: None, None
                size: self.parent.width/1.2,self.parent.height/3
                pos: self.parent.width/2 -self.width/2, self.parent.height/2 -self.height/2
                spacing:2

                canvas.before:
