    AnchorLayout:
        anchor_y:'bottom'
        anchor_x: 'right'

        Button:
            text: 'Debug'
            size_hint: (None, None)
            color: 1, 1, 1, 1
            background_color: (.1, .1, .1, 1)
            opacity: 1 if self.parent.parent.debugMode else 0
            disabled: False if self.parent.parent.debugMode else True
