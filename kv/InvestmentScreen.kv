<InvestmentScreen>:
    on_pre_enter: root.set_user_information()
    welcomeLabel: case_label
    data: data_label
    rv: rv
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    AnchorLayout:
        anchor_y:'top'

        Label:
            # pos_hint: {"x": .2, 'y':0.5}
            id: case_label
            size_hint_y: None
            text_size: self.width, None
            valign: 'center'
            halign: 'center'
            height: self.texture_size[1] * 2.5
            text: 'Main Menu'
            bcolor: .25, .25, .25, 1
            canvas.before:
                Color:
                    rgba: self.bcolor
                Rectangle:
                    pos: self.pos
                    size: self.size

    FloatLayout:

        Label:
            id: instruction_label
            text: 'Please enter all details of your future investments; provide your best estimate'
            # font_size: self.height * 0.5
            # font_name: default_font
            size_hint: (1, .1)
            halign: 'center'
            pos_hint: {'x':0, 'y': 0.85}
            color: 0,0,0,1

        BoxLayout:
            orientation: 'horizontal'

            padding: '1dp'
            spacing: 1

            pos_hint: {'x':0, 'y': .601}

            Button:
                text: '[size=40]+[/size][size=30]  Add Investments[/size]'
                # size_hint_x: None
                size_hint_y: None
                # size: self.texture_size
                markup: True
                # pos_hint: {'x':0.01, 'y': .6}
                # font_size='20'
                height : '35dp'
                # width: self.textheight
                color: .5,.5,.5, 1
                on_release: 
                    self.color = .5,.5,.5, 1
                    self.background_color = (1.0, 1.0, 1.0, 0.0)
                    root.add_income()
                    # root.del_OverviewListItem(root.note_index,root.note_type)
                on_press: 
                    self.color = 1,1,1,1
                    self.background_color = (0, 0, 0, 1.0)


                background_color: (1.0, 1.0, 1.0, 0.0)
                # canvas.before:
                #     Color:
                #         rgba: 1, 1, 1, 1
                #     Rectangle: 
                #         pos: self.pos
                #         size: self.size
                canvas.before:
                    Color:
                        rgba: .75, .75, .75, 1
                    Line:
                        id:line_border
                        width: 1
                        rectangle: self.x, self.y, self.width, (self.height)

        Label:
            id: income_label
            text: 'Income:'
            # size_hint_x: None
            font_size: self.height * 0.35
            # font_name: default_font
            size_hint: (1, .1)
            halign: 'center'
            pos_hint: {'x':-.4, 'y': 0.65}
            color: 0,0,0,1


        Label:
            id: data_label
            text: 'Income:'
            # size_hint_x: None
            font_size: self.height * 0.35
            # font_name: default_font
            size_hint: (1, .1)
            halign: 'center'
            pos_hint: {'x':-.4, 'y': 0.45}
            color: 0,0,0,1


        ListView:
            adapter: ListAdapter(data=root.data_investments, cls=Factory.InvestmentListItem, args_converter=root.args_converter)
            pos_hint: {'x': 0, 'y': -0.4}

    # FloatLayout:
        BoxLayout:
            height: 300
            size_hint_y:None

            # id:recycle_Container
            # rv: rv
            pos_hint: {'x': 0, 'y': 0.1}
            orientation: 'vertical'
            GridLayout:
                cols: 3
                rows: 2
                size_hint_y: None
                height: dp(108)
                padding: dp(8)
                spacing: dp(16)
                Button:
                    text: 'Populate list'
                    on_press: root.populate()
                Button:
                    text: 'Sort list'
                    on_press: root.sort()
                Button:
                    text: 'Clear list'
                    on_press: root.clear()
                BoxLayout:
                    spacing: dp(8)
                    Button:
                        text: 'Insert new item'
                        on_press: root.insert(new_item_input.text)
                    TextInput:
                        id: new_item_input
                        size_hint_x: 0.6
                        hint_text: 'value'
                        padding: dp(10), dp(10), 0, 0
                BoxLayout:
                    spacing: dp(8)
                    Button:
                        text: 'Update first item'
                        on_press: root.update(update_item_input.text)
                    TextInput:
                        id: update_item_input
                        size_hint_x: 0.6
                        hint_text: 'new value'
                        padding: dp(10), dp(10), 0, 0
                Button:
                    text: 'Remove first item'
                    on_press: root.remove()

            # ScrollView:
            #     size_hint_y: 0
            #     height: 200
            RecycleView:
                id: rv
                scroll_type: ['bars', 'content']
                scroll_wheel_distance: dp(50)
                bar_width: dp(10)
                viewclass: 'Row'
                RecycleBoxLayout:
                    default_size: None, dp(56)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: dp(2)

                # bcolor: .25, .25, .25, 1
                # canvas.before:
                #     Color:
                #         rgba: self.bcolor
                #     Rectangle:
                #         pos: self.pos
                #         size: self.size

