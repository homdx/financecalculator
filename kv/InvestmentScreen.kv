#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import Factory kivy.factory.Factory
#:include kv/Widgets.kv

<InvestmentScreen>:
    on_pre_enter: root.set_user_information()
    welcomeLabel: case_label
    data: data_label
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    AnchorLayout:
        anchor_y:'top'

        Label:
            # pos_hint: {"x": .2, 'y':0.5}
            id: case_label
            size_hint_y: None
            text_size: self.width, None
            valign: 'center'
            halign: 'center'
            height: self.texture_size[1] * 2.5
            text: 'Main Menu'
            bcolor: .25, .25, .25, 1
            canvas.before:
                Color:
                    rgba: self.bcolor
                Rectangle:
                    pos: self.pos
                    size: self.size

    FloatLayout:

        Label:
            id: instruction_label
            text: 'Please enter all details of your future investments; provide best your best estimate'
            # font_size: self.height * 0.5
            # font_name: default_font
            size_hint: (1, .1)
            halign: 'center'
            pos_hint: {'x':0, 'y': 0.85}
            color: 0,0,0,1

        BoxLayout:
            orientation: 'horizontal'

            padding: '1dp'
            spacing: 1

            pos_hint: {'x':0, 'y': .601}

            Button:
                text: '[size=40]+[/size][size=30]  Add Investments[/size]'
                # size_hint_x: None
                size_hint_y: None
                # size: self.texture_size
                markup: True
                # pos_hint: {'x':0.01, 'y': .6}
                # font_size='20'
                height : '35dp'
                # width: self.textheight
                color: .5,.5,.5, 1
                on_release: 
                    self.color = .5,.5,.5, 1
                    self.background_color = (1.0, 1.0, 1.0, 0.0)
                    root.add_income()
                    # root.del_OverviewListItem(root.note_index,root.note_type)
                on_press: 
                    self.color = 1,1,1,1
                    self.background_color = (0, 0, 0, 1.0)


                background_color: (1.0, 1.0, 1.0, 0.0)
                # canvas.before:
                #     Color:
                #         rgba: 1, 1, 1, 1
                #     Rectangle: 
                #         pos: self.pos
                #         size: self.size
                canvas.before:
                    Color:
                        rgba: .75, .75, .75, 1
                    Line:
                        id:line_border
                        width: 1
                        rectangle: self.x, self.y, self.width, (self.height)

        Label:
            id: income_label
            text: 'Income:'
            # size_hint_x: None
            font_size: self.height * 0.35
            # font_name: default_font
            size_hint: (1, .1)
            halign: 'center'
            pos_hint: {'x':-.4, 'y': 0.65}
            color: 0,0,0,1


        Label:
            id: data_label
            text: 'Income:'
            # size_hint_x: None
            font_size: self.height * 0.35
            # font_name: default_font
            size_hint: (1, .1)
            halign: 'center'
            pos_hint: {'x':-.4, 'y': 0.45}
            color: 0,0,0,1


        ListView:
            adapter: ListAdapter(data=root.data_income, cls=Factory.InvestmentListItem, args_converter=root.args_converter)
            pos_hint: {'x': 0, 'y': -0.4}

            # bcolor: .25, .25, .25, 1
            # canvas.before:
            #     Color:
            #         rgba: self.bcolor
            #     Rectangle:
            #         pos: self.pos
            #         size: self.size

